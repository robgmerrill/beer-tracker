<div class="flex-container">
  <div class="flex-item">
    <h1>Beer Tracker</h1>
    <p id="explanation">Our beer is {{brewery.name}}! We have been open for {{brewery.yearsOpen}}!</p>
    <h2>Beer Tracker helps you see what beers are available today</h2>
    <p>{{menuLength}} beers</p>
    <p>{{availableItems.length}} beers available </p>
    <ul>
      {{#each model as |beer|}}
        <li class="{{if beer.isAvailable '' 'not-available'}}">
          {{#link-to 'beers.beer' beer.id}}{{beer.name}}{{/link-to}}!
          {{#if beer.isAvailable}}
            <button {{action 'makeUnavailable' beer}}>Make Unavailable</button>
            {{else}}
              <button {{action 'makeAvailable' beer}}>Make Available</button>
              {{/if}}
            </li>


        {{/each}}
    </ul>
    <hr>

    {{input value=newItem}}
    <button {{action 'saveNewItem' newItem}}>Save</button>
  </div>
  <div class="flex-item">
{{outlet}}
</div>
</div>
